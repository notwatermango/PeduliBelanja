<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green">

        <TextView
            android:text="Rencana Belanja"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/recycle_view_section"
        android:layout_width="match_parent"
        android:layout_height="671dp"
        android:layout_below="@+id/panel"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="69dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/panel" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/payment_section_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="498dp"
        android:background="@drawable/box_shadow_up"
        android:orientation="horizontal" />



</RelativeLayout>